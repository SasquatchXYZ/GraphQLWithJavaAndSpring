type Query {
    pets: [Pet]
    pet(id: ID!): Pet
    petSearch(input: PetSearchInput!): [Pet]
}

type Mutation {
    changePetName(id: ID!, newName: String!): ChangePetNamePayload
}

type ChangePetNamePayload {
    pet: Pet
}

input PetSearchInput {
    namePattern: String
    ownerPattern: String
}

type Pet {
    id: ID!
    name: String
    color: String
    owner: Person
}

type Person {
    name: String
}